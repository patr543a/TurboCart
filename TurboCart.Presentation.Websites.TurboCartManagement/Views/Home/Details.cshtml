@model TurboCart.Domain.Entities.Booking

@{
    ViewData["Title"] = "Details";

    var datetimeCulture = new System.Globalization.CultureInfo("da-DK");
}

<h1>Detaljer</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Booking Id</dt>
        <dd class = "col-sm-10">
            @Model.BookingId
        </dd>
        <dt class = "col-sm-2">Dato</dt>
        <dd class = "col-sm-10">
            @Model.Start.ToString("dddd, d. MMMM yyyy", datetimeCulture)
        </dd>
        <dt class="col-sm-2">Tid</dt>
        <dd class="col-sm-10">
            @Model.Start.ToString("t", datetimeCulture)
        </dd>
        <dt class = "col-sm-2">Kunde Id</dt>
        <dd class = "col-sm-10">
            @Model.CustomerId
        </dd>
        <dt class="col-sm-2">Kunde</dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
    </dl>
</div>
<div>
    @{ /*Html.ActionLink("Edit", "Edit", new { id = Model.PrimaryKey )*/ }
    <a class="btn btn-primary mb-3 me-1" asp-action="Edit" asp-route-id="@Model.BookingId">Rediger</a>
    <a class="btn btn-danger mb-3 me-1" asp-action="Delete" asp-route-id="@Model.BookingId">Slet</a>
    <br/>
    <a asp-action="Index">Tilbage til listen</a>
</div>
