@section Scripts {
    <script>
        $("#DetailedReason").hide();

        $("#Reason").change(function() {
            if($("#Reason").val() == ""){
                $("#DetailedReason").show();
            }
            else {
                $("#DetailedReason").hide();
            }
        });
    </script>
}