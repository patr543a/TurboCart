    <form asp-action="Delete">
        <input asp-for="BookingId" type="hidden" />
        <div class="form-group mb-3">
            <label asp-for="Reason" class="control-label">Begrundelse</label>
            <select asp-for="Reason" class="form-select">
                <option value="Aflysning fra kundes side">Aflysning fra kundes side</option>
                <option value="Aflysning fra TurboCarts side">Aflysning fra TurboCarts side</option>
